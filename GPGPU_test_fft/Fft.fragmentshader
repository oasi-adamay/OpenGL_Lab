#version 330 core
precision highp float;
uniform sampler2D	texSrc;
uniform vec2		texSrcSize;
layout (location = 0) out vec2 flagColor;
void main(void)
{
	vec2 src  = texture(texSrc, gl_FragCoord.xy/texSrcSize.xy).rg;
	flagColor = src;
}

